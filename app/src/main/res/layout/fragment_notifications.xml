<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:scaleType="fitXY"
        android:src="@drawable/map_tile_background" />

    <Button
        android:id="@+id/nearest_data_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="19dp"
        android:background="@color/app_green"
        android:shadowColor="@android:color/darker_gray"
        android:text="Click here for nearest city data" />

    <SearchView
        android:id="@+id/country_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nearest_data_button"
        android:iconifiedByDefault="false"
        android:queryHint="Search your country here" />

    <SearchView
        android:id="@+id/state_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/country_search"
        android:iconifiedByDefault="false"
        android:queryHint="Search your state here" />

    <SearchView
        android:id="@+id/city_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/state_search"
        android:iconifiedByDefault="false"
        android:queryHint="Search your city here" />

